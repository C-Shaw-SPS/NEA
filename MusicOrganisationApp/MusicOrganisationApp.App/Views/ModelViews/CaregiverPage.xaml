<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MusicOrganisationApp.Lib.ViewModels.ModelViewModels;assembly=MusicOrganisationApp.Lib"
    x:Class="MusicOrganisationApp.App.Views.ModelViews.CaregiverPage"
    Title="Caregiver">

    <ContentPage.BindingContext>
        <viewmodels:CaregiverViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Edit"
            Command="{Binding EditCommand}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <Grid
            Margin="20"
            RowSpacing="10"
            ColumnSpacing="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="Name:"
                VerticalOptions="Center"/>
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding Name}"
                VerticalOptions="Center"/>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Text="Email address:"
                VerticalOptions="Center"/>
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding EmailAddress}"
                VerticalOptions="Center"/>

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Text="Phone number:"
                VerticalOptions="Center"/>
            <Label
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding PhoneNumber}"
                VerticalOptions="Center"/>

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Text="Notes:"
                VerticalOptions="Center"/>
            <Label
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding Notes}"
                VerticalOptions="Center"/>

        </Grid>
    </ScrollView>

</ContentPage>