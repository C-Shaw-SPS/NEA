<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MusicOrganisation.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MusicOrganisation.App"
    xmlns:views="clr-namespace:MusicOrganisation.App.Views"
    xmlns:viewmodels="clr-namespace:MusicOrganisation.Lib.ViewModels;assembly=MusicOrganisation.Lib"
    Shell.FlyoutBehavior="Disabled"
    Title="MusicOrganisation.App">

    <TabBar>

        <Tab Title="Main page">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <Tab Title="Composers">
            <ShellContent ContentTemplate="{DataTemplate views:AllComposersPage}"/>
        </Tab>

        <Tab Title="Developer tools">
            <ShellContent ContentTemplate="{DataTemplate views:DeveloperToolsPage}"/>
        </Tab>

    </TabBar>

</Shell>